@model Project.Models.Items
@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-12 alert alert-secondary">
        @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "msg", OnComplete = "clearAll" }))
        {
            <h2 class="text-center  alert alert-heading alert-primary" >Delete</h2><br/>
            @Html.AntiForgeryToken()
            <div class="row mb-1">
                @Html.LabelFor(x => x.ItemName, new { @class = "col-form-label col-form-label-sm col-2 r " })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.ItemName, new { @class = "form-control form-control-sm" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.ItemName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-1">
                @Html.LabelFor(x => x.Category.CategoryName, new { @class = "col-form-label col-form-label-sm col-2 r " })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control form-control-sm r" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.Category.CategoryName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-1">
                @Html.LabelFor(x => x.Price, new { @class = "col-form-label col-form-label-sm col-2 r " })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control form-control-sm" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.Price, " ", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-1">
                @Html.LabelFor(x => x.StoreDate, new { @class = "col-form-label col-form-label-sm col-2 r " })
                <div class="col-6">
                    @Html.EditorFor(x => x.StoreDate, new { htmlAttributes = new { @class = "form-control", placeholder = "Store Date", Type = "date" } })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.StoreDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-1">
                @Html.LabelFor(x => x.PicturePath, new { @class = "col-form-label col-form-label-sm col-2 r " })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.PicturePath, new { @class = "form-control form-control-sm", type = "file" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.PicturePath, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-2">
                @Html.LabelFor(x => x.Available, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.CheckBoxFor(x => x.Available)
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.Available, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="row mb-2">
                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </div>
            </div>

            <div class="row mb-1">
                <div id="msg">
                </div>
            </div>
        }
    </div>
    <div class="d-flex justify-content-start">
        <a href="@Url.Action("Index","Admin")" class="btn btn-link btn-sm mb-2"><i class="fa fa-arrow-left"></i> Back to list</a>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <script>
        $("#form0").attr("enctype","multipart/form-data")
        function clearAll() {
            $("#form0").trigger("reset");
        }
    </script>
}




