<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>@ViewBag.IsDB</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style type="text/css">
        body {
            font-family: 'Century Gothic';
            padding: 70px;
        }
    </style>
    @RenderSection("styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top border-bottom">
        @*<a class="navbar-brand" href="#">IsDB-BISEW</a>*@
        <img src="~/Images/Slider/logo.png" width="50" />&nbsp;&nbsp;
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })

                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Shopping", "Index", "JewelleryView", new { }, new { @class = "nav-link" })

                </li>
                <li>
                    @Html.ActionLink("Category", "Index", "Categories", new { }, new { @class = "nav-link" })
                </li>
                <li>
                    @Html.ActionLink("Jewellery", "Index", "Admin", new { }, new { @class = "nav-link" })
                </li>
                <li>
                    @Html.ActionLink("Employee", "Index", "Employees", new { }, new { @class = "nav-link" })

                </li>
                <li>
                    @Html.ActionLink("Report", "Index", "Reports", new { }, new { @class = "nav-link" })

                </li>
              
                @*<li>
                    @Html.ActionLink("Customer", "Index", "JewelleryReport", new { }, new { @class = "nav-link" })

                </li>*@
            </ul>
            
            <ul class="nav navbar-nav ms-auto">
                @*<li>
                    @Html.ActionLink("Cart", "Index", "JewelleryView", new { }, new { @class = "nav-link" })

                </li>*@
                @if (Request.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink("Hello, " + User.Identity.Name + " !", "Index", "", new { @class = "nav-link" })
                    </li>
                    <li>
                        @Html.ActionLink("Logout", "Logout", "Account", new { }, new { @class = "nav-link" })
                    </li>
                }
                else
                {
                    <li class="active">
                        @Html.ActionLink("Register", "Register", "Account", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="active">
                        @Html.ActionLink("Login", "LOgin", "Account", new { }, new { @class = "nav-link" })
                    </li>
                }
            </ul>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="navbar-dark bg-dark fixed-bottom text-white">
        <p class="text-center">&copy;@DateTime.Now.Year - www.onuabedin.org</p>
    </footer>

    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

