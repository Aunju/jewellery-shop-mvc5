@model IEnumerable<Project.Models.CustomerVM>
@{
    ViewBag.Title = "CusIndex";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="alert alert-info text-center">Customer List</h2>
        <div class="d-flex justify-content-end">
            <a href="@Url.Action("CusIndex","Customer")" class="btn btn-primary" style="margin-bottom:5px;">Add New Customer</a>
        </div>
        <table class="table table-bordered">
            <thead class="alert alert-primary">
                <tr>

                    <th>Name</th>
                    <th>Address</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var cus in Model)
                {
                    <tr>

                        <td>@Html.DisplayFor(x => cus.CustomerName)</td>
                        <td>@Html.DisplayFor(x => cus.Address)</td>



                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-end">
        <a href="@Url.Action("Create","OrderReceived")" class="btn btn-primary" style="margin-bottom:5px;">Confirm</a>
    </div>
</div>


