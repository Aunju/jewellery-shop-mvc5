@model Project.Models.Customer

@{
    ViewBag.Title = "Create";
}



<h2 class="text-center alert alert-primary">Add Customer</h2>

@using (Html.BeginForm("Create", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        @Html.ValidationSummary(true)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.CustomerName, new { @class = "control-label" })
        @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CustomerName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Address, new { @class = "control-label" })
        @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
    </div>
    <br />
    <div class="btn btn-outline-success">
       
        @Html.ActionLink("Save", "OrderReceived", new { }, new { @class = "nav-link" })
    </div>
}




<div>
    <a href="@Url.Action("Index","JewelleryView")" class="btn btn-link"><span class="fa fa-arrow-left"></span> Back to list</a>
</div>