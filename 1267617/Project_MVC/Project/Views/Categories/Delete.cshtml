@model Project.Models.Category
@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="row">

        <div class="col-md-12 mb-3">
            <h3 class="text-center alert alert-heading alert-primary">Delete Category</h3>
        </div>

        <div class="col-md-12">
            @using (Html.BeginForm("Delete", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(x => x.CategoryId)
                <div class="row mb-2">
                    @Html.LabelFor(x => x.CategoryName, new { @class = "col-form-label col-md-2 r" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control r" })
                    </div>
                    <div class="col-md-4">
                        @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="row mb-3">
                    <div class="col-md-10 offset-2">
                        <button type="submit" class="btn btn-info">Delete</button>
                        <a href="@Url.Action("Index", "Categories")" class="btn btn-danger">Cancel</a>
                    </div>
                </div>
            }
        </div>
        
    </div>
</div>
